@model JN.Ordersystem.DAL.Entities.Product

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.ItemName)</h1>

<div>
    <h4>Product #@Html.DisplayFor(model => model.ProductID)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Product ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductID)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Price
        </dt>
        <dd class = "col-sm-10">
            € @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Units in stock
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UnitsInStock)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID  }) |
    <a asp-action="Index">Back to List</a>
</div>
