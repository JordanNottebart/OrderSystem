@model IEnumerable<JN.Ordersystem.DAL.Entities.Product> 

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<table id="example" class="table table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>
                Product ID
            </th>
            <th>
                Product Name
            </th>
            <th>
                Price
            </th>
            <th>
                Units in stock
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                @Html.DisplayFor(modelItem => item.ProductID)
                </td>
                <td>
                    <span class="clickable-name" data-url="@Url.Action("Details", new { id = item.ProductID })">
                        @Html.DisplayFor(modelItem => item.ItemName)
                    </span>
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td class="text-right">
                @Html.DisplayFor(modelItem => item.UnitsInStock)
                </td>
                <td class="text-right">
                    <div class="action-icons">
                        <a href="@Url.Action("Edit", new { id = item.ProductID })" title="Edit"><i class="fa-solid fa-edit"></i></a>
                        <a href="@Url.Action("Details", new { id = item.ProductID })" title="Details"><i class="fa-solid fa-info-circle"></i></a>
                            <a href="@Url.Action("Delete", new { id = item.ProductID })" title="Delete"><i class="fa-solid fa-trash-can"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


<script>
    $(document).ready(function () {
    $(".clickable-name").click(function () {
        var url = $(this).data("url");
        window.location.href = url;
        });
    });
    $(document).ready(function () {
    $('#example').DataTable();
});
</script>


<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>


