@model IEnumerable<JN.Ordersystem.DAL.Entities.Product> 

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<table id="example" class="table table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>
                Product ID
            </th>
            <th>
                Product Name
            </th>
            <th>
                Price
            </th>
            <th>
                Units in stock
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                @Html.DisplayFor(modelItem => item.ProductID)
                </td>
                <td>
                    <span class="clickable-name" data-url="@Url.Action("Details", new { id = item.ProductID })">
                        @Html.DisplayFor(modelItem => item.ItemName)
                    </span>
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td class="text-right">
                @Html.DisplayFor(modelItem => item.UnitsInStock)
                </td>
                <td class="text-right">
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton-@item.ProductID" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa-solid fa-ellipsis-vertical"></i>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton-@item.ProductID">
                            <a class="dropdown-item" href="@Url.Action("Edit", new { id = item.ProductID })">Edit</a>
                            <a class="dropdown-item" href="@Url.Action("Details", new { id = item.ProductID })">Details</a>
                            <a class="dropdown-item" href="@Url.Action("Delete", new { id = item.ProductID })">Delete</a>
                        </div>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>


<script>
    $(document).ready(function () {
    $(".clickable-name").click(function () {
        var url = $(this).data("url");
        window.location.href = url;
        });
    });
    $(document).ready(function () {
    $('#example').DataTable();
});
</script>


<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>


