@model IEnumerable<JN.Ordersystem.DAL.Entities.Product> 

@{
    ViewData["Title"] = "Index";
}

<div class="container productIndexPageContainer">
    <h1>Products</h1>
  <div class="row">
    <div class="col-md-12">
      <div class="text-right mb-3">
        <a href="@Url.Action("Create", "Product")" class="btn btn-primary">+ New Product</a>
      </div>
      <table id="productDatatable" class="table table-hover table-responsive">
        <thead>
            <tr>
                <th class="align-left">Product ID</th>
                <th class="align-left">Product Name</th>
                <th>Price</th>
                <th>Units In Stock</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td> 
                    @Html.DisplayFor(modelItem => item.ProductID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemName)
                </td>
                <td class="text-right">
                    € @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.UnitsInStock)
                </td>
                <td class="text-right">
                    <div class="action-icons">
                        <a href="@Url.Action("Edit", new { id = item.ProductID })" title="Edit"><i class="fa-solid fa-edit"></i></a>
                        <a href="@Url.Action("Details", new { id = item.ProductID })" title="Details"><i class="fa-solid fa-info-circle"></i></a>
                        <a href="@Url.Action("Delete", new { id = item.ProductID })" title="Delete"><i class="fa-solid fa-trash-can"></i></a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
       </table>
    </div>
  </div>
</div>

<script src="~/js/site.js" asp-append-version="true"></script>





