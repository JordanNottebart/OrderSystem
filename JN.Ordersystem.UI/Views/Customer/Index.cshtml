@model IEnumerable<JN.Ordersystem.DAL.Entities.Customer>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Customers</h1>
  <div class="row">
    <div class="col-md-12">
      <div class="text-right mb-3">
        <a href="@Url.Action("Create", "Customer")" class="btn btn-primary">+ New Customer</a>
      </div>
      <table id="customerDatatable" class="table table-hover table-responsive">
        <thead>
            <tr>
                <th class="align-left">Customer ID</th>
                <th class="align-left">Last Name</th>
                <th>First Name</th>
                <th>Address</th>
                <th>City</th>
                <th>PostalCode</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> 
                        @Html.DisplayFor(modelItem => item.CustomerID)
                    </td>
                    <td>
                        <span class="clickable-name" data-url="@Url.Action("Details", new { id = item.CustomerID })">
                            @Html.DisplayFor(modelItem => item.CustomerLastName)
                        </span>
                    </td>
                    <td>
                        <span class="clickable-name" data-url="@Url.Action("Details", new { id = item.CustomerID })">
                            @Html.DisplayFor(modelItem => item.CustomerFirstName)
                        </span>
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.PostalCode)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td class="text-right">
                        <div class="action-icons">
                            <a href="@Url.Action("Edit", new { id = item.CustomerID })" title="Edit"><i class="fa-solid fa-edit"></i></a>
                            <a id="detailsLink" href="@Url.Action("Details", new { id = item.CustomerID })" title="Details"><i class="fa-solid fa-info-circle"></i></a>
                            <a href="@Url.Action("Delete", new { id = item.CustomerID })" title="Delete"><i class="fa-solid fa-trash-can"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
       </table>
    </div>
  </div>
</div>

<script src="~/js/site.js" asp-append-version="true"></script>